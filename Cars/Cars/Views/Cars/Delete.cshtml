@model Cars.Models.Cars.CarViewModel
<h1>Delete car</h1>
<div>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Id)
        </div>
        <div class="form-group row">
            <label asp-for="Make" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Make)
        </div>
        <div class="form-group row">
            <label asp-for="Model" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Model)
        </div>
        <div class="form-group row">
            <label asp-for="Year" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Year)
        </div>
        <div class="form-group row">
            <label asp-for="Price" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Price)
        </div>
        <div class="form-group row">
            <label asp-for="Mileage" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Mileage)
        </div>
        <div class="form-group row">
            <label asp-for="Fuel" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Fuel)
        </div>
        <div class="form-group row">
            <label asp-for="Color" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.Color)
        </div>
        <div class="form-group row">
            <label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.CreatedAt)
        </div>
        <div class="form-group row">
            <label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(Model => Model.ModifiedAt)
        </div>
    </dl>

    <form asp-action="DeleteConfirmation">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" asp-controller="cars" class="btn btn-outline-dark">Back</a>
    </form>
</div>